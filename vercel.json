{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "*.css",
      "use": "@vercel/static"
    },
    {
      "src": "*.js",
      "use": "@vercel/static"
    },
    {
      "src": "*.png",
      "use": "@vercel/static"
    },
    {
      "src": "*.jpg",
      "use": "@vercel/static"
    },
    {
      "src": "*.ico",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://bearpark-api-production.up.railway.app/api/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    },
    {
      "src": "/health",
      "dest": "backend/server.js"
    },
    {
      "src": "/flappybear",
      "dest": "/flappybear.html"
    },
    {
      "src": "/flappy-bear",
      "dest": "/frontend/flappy-bear/index.html"
    },
    {
      "src": "/flappy-bear/(.*)",
      "dest": "/frontend/flappy-bear/$1"
    },
    {
      "src": "/bear-jumpventure",
      "dest": "/frontend/bear-jumpventure/index.html"
    },
    {
      "src": "/bear-jumpventure/(.*)",
      "dest": "/frontend/bear-jumpventure/$1"
    },
    {
      "src": "/bear-ninja",
      "dest": "/frontend/bear-ninja/index.html"
    },
    {
      "src": "/bear-ninja/(.*)",
      "dest": "/frontend/bear-ninja/$1"
    },
    {
      "src": "/bearpong",
      "dest": "/bearpong.html"
    },
    {
      "src": "/pong/(.*)",
      "dest": "/public/pong/$1"
    },
    {
      "src": "/NFTrequests",
      "dest": "/admin-store.html"
    },
    {
      "src": "/store-admin",
      "dest": "/admin-store.html"
    },
    {
      "src": "/merch-admin",
      "dest": "/merch-admin.html"
    },
    {
      "src": "/(.*\\.(html|css|js|png|jpg|jpeg|gif|svg|ico))",
      "dest": "/$1"
    },
    {
      "src": "/",
      "dest": "/index.html"
    }
  ]
}
